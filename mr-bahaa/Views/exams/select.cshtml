@model  mr_bahaa.Models.exam

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container pb-5">
    <div class="row justify-content-center pt-5 pb-5">
        <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center pb-4">
            <div class="card  my-5 shadow-lg p-4 mb-5 bg-white rounded justify-content-center">
                <div class="justify-content-center pl-4 d-flex">





                    <h3> Exam :     @Html.DisplayFor(model => model.name) @Html.DisplayFor(model => model.Date) </h3>


                    <div class="container mb-4">
                        <div class="row justify-content-center">
                            <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
                                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                                    <div class="justify-content-center pl-5">
                                        <h2 class="p-4">لا تنسي سيتم تنزيل فيديو علي صفحه متسر محمد علي الفيس بوك عن كيفيه تسليم الواجب </h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <p class="pr-2">
                        @Html.ActionLink("الامتحان الاختياري", "Details", new { id = Model.examid }, new { @class = "btn info" })
                    </p>
                    <p>
                        @Html.ActionLink("الامتحان المقالي", "myquestion",new { id = Model.examid }, new { @class = "btn success" })
                    </p>

                </div>
            </div>
        </div>
    </div>
</div>
