@model IEnumerable<mr_bahaa.Models.exam>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: bold;
       
        border-radius: 10px;
        padding: 5px;
    }
</style>
<div class="container mb-4">
    <div class="row justify-content-centery">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto  ">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded">
                <div class="p-md-5 ">
                    <p>
                        @Html.ActionLink("Create New", "Create", "exams", new { @class = "btn success" })
                    </p>
                    <div class="justify-content-center table-responsiv">
                        <table id="myTable" class="table table-bordered  ">
                            <thead class="thead-dark ">
                                <tr style="font-size:16px" class="cell-breakAll ">
                                    <th>
                                        @Html.DisplayNameFor(model => model.name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Date)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.examid }, new { @class = "btn warning" }) |
                                            @Html.ActionLink("Show", "Details", new { id = item.examid }, new { @class = "btn info" }) |

                                            @Html.ActionLink("Delete", "Delete", new { id = item.examid }, new { @class = "btn danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>

                        @section scripts
{
                            <script src="~/datatabels/DataTables-1.10.20/js/jquery.dataTables.js"></script>

                            <script type="text/javascript">

                                $(document).ready(function () {
                                    $('#myTable').dataTable();
                                });

                            </script>
                        }
