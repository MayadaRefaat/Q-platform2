@model mr_bahaa.Models.homework

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                <div class="justify-content-center pl-1">
                    <h2 class="text-center card-header">Add HomeWork</h2>
                </div>

                <div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        <div class="form-horizontal">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })





                            <div class="form-group">
                                @Html.LabelFor(model => model.lectureid, "Lecture Name", htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.DropDownList("lectureid", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.lectureid, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group pt-3">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btnCreate" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                    </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                </div>
            </div>
        </div>
    </div>
</div>