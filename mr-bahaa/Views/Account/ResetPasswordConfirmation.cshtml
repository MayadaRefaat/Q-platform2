@{
    ViewBag.Title = "Reset password confirmation";
}
    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                    <div class="justify-content-center pl-5">
                        <hgroup class="title">
                            <h1>@ViewBag.Title.</h1>
                        </hgroup>
                    </div>
                  
                    <div>
                        <p>
                            Your password has been reset. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                        </p>
                    </div>
                    </div>
</div>
</div>
</div>
