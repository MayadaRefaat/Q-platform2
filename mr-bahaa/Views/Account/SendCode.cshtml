@model mr_bahaa.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}
    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-8  mx-auto justify-content-center">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                    <div class="justify-content-center pl-5">
                        <h4>Send verification code</h4>
                    </div>
                 

                    @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("rememberMe", @Model.RememberMe)
                       
                        <hr />
                        <div class="row">
                            <div class="col-md-8">
                                Select Two-Factor Authentication Provider:
                                @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
                                <input type="submit" value="Submit" class="btn btnCreate" />
                            </div>
                        </div>
                    }
                    </div>
                </div>
            </div>
        </div>

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
