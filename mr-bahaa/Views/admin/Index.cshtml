@model IEnumerable<mr_bahaa.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    label {
        display: inline-block;
        max-width: 100%;
        margin-bottom: 5px;
        font-weight: bold;
      
        border-radius: 10px;
        padding: 5px;
    }
</style>
<div class="container mb-4">
    <div class="row justify-content-centery">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto  ">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded">
                <div class="p-md-5 ">

                    <p style="margin-bottom:25px;">
                        @Html.ActionLink("Create New", "Create", "admin", new { @class = "btn success" })


                    </p>


                    <div class="justify-content-center card-body table-responsive">
                        <table id="myTable" class="table table-bordered  " style="width:100%">
                            <thead class="thead-dark ">
                                <tr class="cell-breakAll" style="font-size:16px">


                                    <th>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </th>
                                    <th>
                                        <h5>Student's School</h5>
                                    </th>
                                    <th>
                                        <h5>day</h5>
                                    </th>
                                    <th>
                                        <h5>day</h5>
                                    </th>

                                    <th>
                                        <h5>Student's phone</h5>
                                    </th>
                                    <th>
                                        <h5>Student's phone</h5>
                                    </th>


                                    <th></th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.School)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Yourclass)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Appointment)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.secphonenumber)
                                </td>


                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn warning" }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn info" }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn danger" })
                                    @Html.ActionLink("accecpt ", "accept", "Students", new { id  = item.Id }, new { @class = "btn btn-block btnprimary", @style = "background-color:green" })


                                </td>
                            </tr>
                            }

                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

                        @section scripts
{
                            <script src="~/datatabels/DataTables-1.10.20/js/jquery.dataTables.js"></script>

                            <script type="text/javascript">

                                $(document).ready(function () {
                                    $('#myTable').dataTable();
                                });

                            </script>
                        }
