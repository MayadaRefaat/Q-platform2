@model mr_bahaa.viewmodel.qviewmodel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                <div class="justify-content-center ">
                    <h2 class="text-center card-header"> question Details</h2>
                </div>

                    <div>
                      
                        <hr />
                        <img src="@Html.DisplayFor(modelItem =>Model.img.imgurl)" alt="Alternate Text" width="100%" height="200px" />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.questions.question) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.question)
                            </dd>



                            <dt>
                                @Html.DisplayNameFor(model => model.questions.first) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.first)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.questions.sec) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.sec)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.questions.third) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.third)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.questions.fourth) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.fourth)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.questions.correct) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.correct)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.questions.Explanation) :
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.questions.Explanation)
                            </dd>





                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "Edit", "questions", new { id = Model.questions.questionid }, new { @class = "btn warning" }) |
                        @Html.ActionLink("Back to Exam", "Details", "exams", new { id = Model.questions.examid }, new { @class = "btn info" })
                    </p>
                </div>
</div>
</div>
</div>
