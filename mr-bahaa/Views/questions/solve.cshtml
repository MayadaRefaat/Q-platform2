@model mr_bahaa.viewmodel.qviewmodel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-12 col-lg-10 mx-auto  ">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded">
                    <div class="text-center col-md-12 pt-5">

                        @using (Html.BeginForm("solve", "questions", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-horizontal pl-5">
                                
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                @Html.HiddenFor(model => model.questions.questionid)

                                <div class="col-md-10">
                                    <p class=" center" style="font-size:40px ;margin:auto">
                                        <img src="@Html.DisplayFor(modelItem =>Model.img.imgurl)" alt="Alternate Text" width="100%" height="300px" />
                                        <hr>
                                        <div class="con">
                                            @Html.DisplayFor(model => model.questions.question)
                                        </div>
                                    </p>

                                    <p> </p><p> </p>



                                    <label class="containerratio">
                                        @Html.Label(Model.questions.first)
                                        @Html.RadioButton("choise", Model.questions.first)
                                        <span class="checkmarkratio"></span>
                                    </label>
                                    <p></p>


                                    <label class="containerratio">
                                        @Html.Label(Model.questions.sec)
                                        @Html.RadioButton("choise", Model.questions.sec)
                                        <span class="checkmarkratio"></span>
                                    </label>

                                    <p></p>

                                    <label class="containerratio">
                                        @Html.Label(Model.questions.third)
                                        @Html.RadioButton("choise", Model.questions.third)
                                        <span class="checkmarkratio"></span>
                                    </label>
                                    <p></p>

                                    <label class="containerratio">
                                        @Html.Label(Model.questions.fourth)
                                        @Html.RadioButton("choise", Model.questions.fourth)
                                        <span class="checkmarkratio"></span>
                                    </label>
                                    @Html.HiddenFor(model => model.questions.questionid)
                                </div>

                                @Html.HiddenFor(model=>model.xxx)

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Solve" class="btn success" />
                                    </div>
                                </div>

                            </div>
                        }



                        </div>
</div>
</div>
</div>
</div>