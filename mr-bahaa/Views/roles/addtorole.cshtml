@model mr_bahaa.viewmodel.roleviewmodel

@{
    ViewBag.Title = "add to Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })





        <div class="form-group">
            @Html.Label("Select Email for new ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.DropDownList("Id", new SelectList(Model.users, "Id", "UserName"), "  Emails", htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(model=>model.roleid)
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn success" />
            </div>
        </div>
    </div>
}

<div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
