@model mr_bahaa.Models.studentquestions

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                    <div class="justify-content-center ">
                        <h4 class="text-center card-header">Edit  student questions</h4>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <hr />
                            <div class="form-horizontal pl-5">


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.studentquestionid)

                                <div class="form-group">
                                    @Html.LabelFor(model => model.studentquestion, htmlAttributes: new { @class = "control-label " })
                                    <div >
                                        @Html.EditorFor(model => model.studentquestion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.studentquestion, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.teacherreplay, htmlAttributes: new { @class = "control-label " })
                                    <div >
                                        @Html.EditorFor(model => model.teacherreplay, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.teacherreplay, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btnCreate" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="pr-5">
                            @Html.ActionLink("Back to List", "Index",null,htmlAttributes: new { @class = "btn  btnBackTolist" })
                        </div>
                        </div>
</div>
</div>
</div>

