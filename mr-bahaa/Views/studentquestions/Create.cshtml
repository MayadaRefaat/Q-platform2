@model mr_bahaa.Models.studentquestions

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                    <div class="justify-content-center ">
                        <h4 class="text-center card-header">Create student questions</h4>
                        <hr />
                        @using (Html.BeginForm("Create", "studentquestions", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal pl-5">


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.studentquestion, htmlAttributes: new { @class = "control-label " })
                                    <div>
                                        <textarea class="form-control" name="question" required></textarea>
                                        @Html.ValidationMessageFor(model => model.studentquestion, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.teacherid, "Teacher Name", htmlAttributes: new { @class = "control-label" })
                                        <div style="padding:0 3px;">
                                            @Html.DropDownList("teacherid", null, htmlAttributes: new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>


                                <div class="form-group" control-label col-md-2"">

                                    <div class="checkbox">

                                        <label for="sec" class="control-label" style="font-size:15px; font-weight: bold">Or Put a picture or video or audio of the question</label>
                                        <div >
                                            <input type="file" name="files" id="files" multiple style="width: 100%;" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Create" class="btn btnCreate" />
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="pr-5">
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btnBackTolist" })
                        </div>
                    </div>
</div>
</div>
</div>
</div>
