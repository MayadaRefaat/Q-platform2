@model IEnumerable<mr_bahaa.Models.studentquestions>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mb-4">
    <div class="row justify-content-centery">
        <div class="col-sm-12 col-md-12 col-lg-12 mx-auto  ">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded">
                <div class="p-md-5 ">

                    <p>
                    </p>
                    <div class="justify-content-center card-body table-responsive">
                        <table id="myTable" class="table table-bordered  " style="width:100%">
                            <thead class="thead-dark ">
                                <tr class="cell-breakAll" style="font-size:16px">
                                    <th>
                                        student's Question
                                    </th>


                                    <th>

                                        Techear's replay
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.studentquestion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.teacherreplay)
                                        </td>


                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.studentquestionid }, htmlAttributes: new { @class = "btn warning" }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.studentquestionid }, htmlAttributes: new { @class = "btn info" }) |
                                            @Html.ActionLink("reply", "reply", new { id = item.studentquestionid }, htmlAttributes: new { @class = "btn warning" }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.studentquestionid }, htmlAttributes: new { @class = "btn danger" })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

