@model mr_bahaa.viewmodel.onelectureviewmodel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container pt-5">
    <div class="row">
        <div class="">
            <div class="card shadow p-3 mb-2 bg-gray rounded">

                <h5 class="pt-3 text-center"> @Html.DisplayFor(model => model.onelecture.lecture.name)</h5>

                <hr />
                

            </div>

        </div>

        <div class="">









            <div class="card shadow p-3 mb-4 bg-white rounded">
                <div class="panel panel-default text-left">


                    <div class="panel-body  table-responsive">

                        <table class="table table-bordered  " style="width:100%">

                            <thead class="thead-dark ">
                                <tr class="cell-breakAll" style="font-size:16px">
                                    
                                    <th>
                                        @Html.Label("lecture name")
                                    </th>
                                    <th>
                                        @Html.Label("codes")
                                    </th>
                                    <th>
                                        @Html.Label("ip address")
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.codes)
                                {
                                    <tr class="cell-breakAll">

                                        <td>
                                            @Html.DisplayFor(modelItem => item.lecture.name)
                                        </td>
                                        
                                        <td>
                                            @Html.DisplayFor(modelItem => item.code)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ipaddress)
                                        </td>
                                        <td>
                                            @Html.ActionLink("delete", "delete", "codes", new { id = item.codeid }, new { @class = "btn info" })
                                            @Html.ActionLink("edit", "edit", "codes", new { id = item.codeid }, new { @class = "btn info" })




                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>


            </div>











        </div>


    </div>
</div>

