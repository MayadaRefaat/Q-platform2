@model IEnumerable<mr_bahaa.viewmodel.onelectureimage>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.onelecture.lecture.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.onelecture.lecture.name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.onelecture.oneid }) |
                @Html.ActionLink("Details", "Details", new { id = item.onelecture.oneid }) |
                @Html.ActionLink("print", "print", new { id = item.onelecture.oneid }) |

                @Html.ActionLink("Delete", "Delete", new { id = item.onelecture.oneid })
            </td>
        </tr>
    }

</table>

<div class="container-xxl py-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-9"><h2>قائمه المحاضرات </h2></div>
            <div class="col-sm-3"><button class="btn back btn-primary back py-2">@Html.ActionLink("Create New", "Create")</button></div>
        </div>
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">المحاضرات </h6>
            <h1 class="mb-5">Popular Courses</h1>
        </div>
        <div class="row g-4 justify-content-center">

            @{
                foreach (var item in Model)
                {


                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="course-item bg-light">
                            <div class="position-relative overflow-hidden">
                                <a href="~/onelectures/view/@item.onelecture.oneid"> <img class="img-fluid" src="@item.photolec.photoUrl" alt="" style="width:100%; height:250px;"></a>
                                <div class="w-100 d-flex justify-content-center position-absolute bottom-0 start-0 mb-4">
                                    @{

                                    }
                                    <button class="flex-shrink-0 btn btn-sm btn-primary px-3 back" style="border-radius: 0 30px 30px 0;">@Html.ActionLink("رؤيه المحاضره ", "view", "onelecture", new { id = item.onelecture.oneid }, null)</button>
                                </div>
                            </div>
                            <div class="text-center p-4 pb-0">
                                <h3 class="mb-0"></h3>
                              
                                <h5 class="mb-4">@item.onelecture.lecture.name</h5>
                            </div>
                            <div class="d-flex border-top">
                                <small class="flex-fill text-center border-end py-2"><i class="fa fa-clock text-primary me-2"></i></small>
                                <small class="flex-fill text-center py-2"><i class="fa fa-user text-primary me-2"></i></small>
                                @Html.ActionLink("Edit", "Edit", new { id = item.onelecture.oneid }) |
                                @Html.ActionLink("Details", "Details", new { id = item.onelecture.oneid }) |
                                @Html.ActionLink("print", "print", new { id = item.onelecture.oneid }) |

                                @Html.ActionLink("Delete", "Delete", new { id = item.onelecture.oneid })


                            </div>
                        </div>
                    </div>
                }

            }
        </div>

    </div>
</div>

