@model mr_bahaa.Models.lecture

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                <div class="justify-content-center ">
                    <h4 class="text-center card-header">Are you sure you want to delete this lecture?</h4>
                </div>
                
                <div>
                   
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.name)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.date)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.date)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.text)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.text)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color pt-3">
                            <input type="submit" value="Delete" class="btn danger pl-4" />  
                            @Html.ActionLink("Back to Lecture", "Details", "lectures", new { id = Model.lectureid }, new { @class = "btn info" }) 
                        </div>
                    }
                </div>
                </div>
</div>
</div>
</div>
