@model mr_bahaa.Models.lecture

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">

            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">

                <div class="justify-content-center ">
                    <h2 class="text-center card-header">Edit lecture</h2>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <hr />
                        <div class="form-horizontal pl-5">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.lectureid)

                            <div class="form-group">
                                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.examid, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.DropDownList("examid", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.examid, "home work", htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.DropDownList("secexamid", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.homework, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.homework, new { htmlAttributes = new { @class = " " } })
                                    @Html.ValidationMessageFor(model => model.homework, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.subjectid, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.subjectid, new { htmlAttributes = new { @class = "form-control " } })
                                    @Html.ValidationMessageFor(model => model.subjectid, "", new { @class = "text-danger" })
                                </div>
                            </div>
                           
                            <div class="form-group pt-2">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn success" />
                                </div>
                            </div>
                        </div>
                }

                <div class="pr-5">
                    @Html.ActionLink("Back to List", "Index", "lecturese", new { @class = " btn success btnBackTolist" })
                </div>
            </div>
        </div>
    </div>
</div>
