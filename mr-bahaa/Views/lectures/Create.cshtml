@model mr_bahaa.Models.lecture

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                    <div class="justify-content-center pl-5">
                        <h2>Create lecture</h2>
                    </div>
                    @using (Html.BeginForm("Create", "lectures", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <hr />
                        <div class="form-horizontal pl-5">


                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.date, htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.EditorFor(model => model.date, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.date, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.text, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control " } })
                                    @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.examid, "exam Name", htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.DropDownList("examid", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.examid, "home work", htmlAttributes: new { @class = "control-label " })
                                <div>
                                    @Html.DropDownList("secexamid", null, htmlAttributes: new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.homework, htmlAttributes: new { @class = "control-label" })
                                <div>
                                    @Html.EditorFor(model => model.homework, new { htmlAttributes = new { @class = " " } })
                                    @Html.ValidationMessageFor(model => model.homework, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            @Html.HiddenFor(model=>model.subjectid)
                            <div class="form-group" control-label col-md-2"">

                                <div class="checkbox">

                                    <label for="sec" class=" control-label" style="font-size:15px; font-weight: bold">Upload Image:degree</label>
                                    <div>
                                        <input type="image" name="files" id="files"  style="width: 100%;" />
                                    </div>
                                </div>
                            </div>

                            
                            <div class="form-group" style="float:left">
                                <div class="col-md-offset-2 col-md-10 " >
                                    <input type="submit" value="Create" class="btn btnCreate" />
                                </div>
                            </div>
                        </div>
                    }

                    <div class="pr-5">
                        @Html.ActionLink("Back to List", "Index", "lectures", new { @class = "btn  btnBackTolist"})
                    </div>
                </div>
            </div>
    </div>
</div>