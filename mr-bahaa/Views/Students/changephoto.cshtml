@model mr_bahaa.Models.Student
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mb-4">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
            <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                <div class="justify-content-center ">
                    <h2 class="text-center card-header">Change photo</h2>
                </div>
                @using (Html.BeginForm("changephoto", "Students", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    <div class="form-horizontal pl-5">
                        @Html.HiddenFor(Model => Model.id)
                        <div class="form-group" control-label col-md-2"">

                            <div class="checkbox">

                                <label for="sec" class=" control-label" style="font-size:15px; font-weight: bold">Upload Image</label>
                                <div>
                                    <input type="file" name="files" id="files" multiple style="width: 100%;" />
                                </div>
                            </div>
                        </div>


                        <div class="form-group" style="float:left">
                            <div class="col-md-offset-2 col-md-10 ">
                                <input type="submit" value="Create" class="btn btnCreate" />
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>