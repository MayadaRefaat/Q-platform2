@model mr_bahaa.viewmodel.studentcoursesviewmodel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container pt-5">
    <div class="row">
        <div class="col-md-3 well">
            <div class="card shadow p-3 mb-2 bg-gray rounded">

                <h5 class="pt-3 text-center"> @Html.DisplayFor(model => model.student.studentname)</h5>

                <hr />
                <p>
                    <i class="fa fa-home fa-fw" aria-hidden="true"></i>
                    Overview
                </p>
                <p>
                    <i class="fa fa-university fa-fw" aria-hidden="true"></i>
                    @Html.DisplayFor(model => model.student.school)
                </p>
                <p><i class="fa fa-phone-square fa-fw" aria-hidden="true"></i>  @Html.DisplayFor(model => model.student.PhoneNumber)</p>
                <p><i class="fa fa-phone-square fa-fw" aria-hidden="true"></i>  @Html.DisplayFor(model => model.student.secPhoneNumber)</p>


            </div>

        </div>

        <div class="col-md-6">









            <h4 class="pb-3 pt-2 card-header text-center"> Student Courses  </h4>
            <div class="card shadow p-3 mb-4 bg-white rounded">
                <div class="panel panel-default text-left">
                    @Html.ActionLink("Create New", "Create", "joins", new { id = Model.student.id },new { @class = "btn success" })


                    <div class="panel-body  table-responsive">

                        <table class="table table-bordered  " style="width:100%">

                            <thead class="thead-dark ">
                                <tr class="cell-breakAll" style="font-size:16px">

                                    <th>
                                        @Html.Label("student name ")
                                    </th>
                                    <th>
                                        @Html.Label("course")
                                    </th>
                                    <th>
                                        @Html.Label("approve")
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Joins)
                                {
                                    <tr class="cell-breakAll">

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Student.studentname)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.subjectcoure.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.apporved)
                                        </td>
                                        <td>
                                            @Html.ActionLink("edit", "edit", "joins", new { id = item.Joinsid }, new { @class = "btn info" })


                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>


            </div>











        </div>

     
    </div>
</div>

