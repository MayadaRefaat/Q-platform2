@model mr_bahaa.Models.Student

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container mb-4">
        <div class="row justify-content-center">
            <div class="col-sm-12 col-md-8 col-lg-6  mx-auto justify-content-center">
                <div class="card  my-5 shadow-lg p-3 mb-5 bg-white rounded justify-content-center">
                    <div class="justify-content-center pl-1">
                        <h4 class="text-center card-header">Are you sure you want to delete this Student?</h4>
                    </div>

                    <div>

                   
                            <hr />
                            <dl class="dl-horizontal ">
                                <dt>
                                    @Html.DisplayNameFor(model => model.course.day) :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.course.day)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.studentname) :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.studentname)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.PhoneNumber) :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.PhoneNumber)
                                </dd>

                                <dt>
                                    Student's School :
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.school)
                                </dd>

                            </dl>

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-actions no-color pt-3">
                                    <input type="submit" value="Delete" class="btn danger" /> 
                                    @Html.ActionLink("Back to List", "Index", "students", new { @class = " btn info" })
                                </div>
                            }
                        </div>
                    </div>
</div>
</div>
</div>
